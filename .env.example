# Webhook管理系统环境变量配置文件
# 复制此文件为 .env 并根据需要修改配置

# ==================== 应用配置 ====================
# Flask应用密钥（生产环境请使用随机生成的强密钥）
SECRET_KEY=your-secret-key-here

# 运行环境 (development/production/testing)
FLASK_ENV=development

# 调试模式 (True/False)
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=5000

# ==================== 管理员账号配置 ====================
# 管理员用户名
ADMIN_USERNAME=admin

# 管理员密码（请修改为安全密码）
ADMIN_PASSWORD=admin123

# ==================== 文件存储配置 ====================
# 数据存储目录
DATA_DIR=webhook_data

# ==================== 存储限制配置 ====================
# 每个文件最大消息数
MAX_MESSAGES_PER_FILE=500

# 活跃消息最大数（超过后自动归档）
MAX_ACTIVE_MESSAGES=1000

# 每页显示消息数
PAGE_SIZE=20

# ==================== Webhook默认设置 ====================
# 默认Webhook签名密钥
DEFAULT_WEBHOOK_SECRET=0xca74f404e0c7bfa35b13b511097df966d5a65597

# 默认启用状态 (True/False)
DEFAULT_WEBHOOK_ENABLED=True

# 默认事件过滤器（留空表示接收所有事件）
DEFAULT_EVENT_FILTER=

# ==================== 实时推送配置 ====================
# SSE心跳间隔（秒）
SSE_HEARTBEAT_INTERVAL=30

# 实时连接重连间隔（秒）
REALTIME_RECONNECT_INTERVAL=5

# 自动刷新间隔（秒）
AUTO_REFRESH_INTERVAL=5

# ==================== 安全配置 ====================
# 是否启用签名验证 (True/False)
ENABLE_SIGNATURE_VERIFICATION=True

# ==================== 日志配置 ====================
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 是否启用访问日志 (True/False)
ENABLE_ACCESS_LOG=True